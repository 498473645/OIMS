.msgPanel{width:37px; height:35px; text-align:center; position:absolute;}
.msgPanelDivBg{background:url(../images/msg.jpg) no-repeat}
.msgPanelCount a{display:block; color:#ff0000; font-size:14px; font-weight:bold;}
.msgPanelCount a:hover{border:2px solid #ff0000; line-height:33px}
#msgUserListPanel{width:168px; background:#f0f0f0; position:absolute}
.msgPanelTitle{height:8px;border-top:2px solid #ddd; background:url("../style/green/images/footerbg.png") repeat-x; line-height:8px; overflow:hidden}
#msgUserListPanel span.userListBTN{color:#666; cursor:pointer}
#msgUserListPanel span.on{text-decoration: underline;}

#msgUserListPanel p.userListBtnP{text-align:right}
.userListTag{overflow:auto; background:#fff}
.userListTag ul{margin:8px}
.userListTag ul li{margin:2px; border:1px solid #ddd; padding:2px}
.userListTag ul li.user_hover{background:#f0f0f0; color:#ff000}
.userListTag ul li span.zhiwu{color:#ccc}
.userListTag ul li span.newmsg{display:inline-block; width:20px; border:1px solid red; color:red; text-align:center}

.msgDialog{background:#fff; overflow:hidden;}
.msgDialog .msgInputDiv{border-top:1px solid #ddd}
.msgInput{border:1px solid #ddd; height:48px; overflow:auto; text-align:left; margin:6px; padding:6px}
.msgHistoryDiv{background:#f0f0f0; overflow:auto}
 .msgDialog .msgBox{
	-webkit-box-shadow:0 0 10px rgba(0, 204, 204, .5);  
	-moz-box-shadow:0 0 10px rgba(0, 204, 204, .5);  
	box-shadow:0 0 10px rgba(0, 204, 204, .5);
	border:1px solid #ddd; padding:8px; text-align:left;border-radius:10px
}
.userMsg{margin:12px 58px 12px 12px; }
.morMsgListDiv{cursor:pointer}
.myMsg{margin:12px 12px 12px 58px; background:#fff;}
.submitMSG{width:88px; height:28px; margin:0; padding:0}
.msgUserDiv{width:168px; position:absolute; border:2px solid #ddd; background:#fff; padding:6px}
.msgAttachmentDiv{border-top:1px solid #ccc}
a.msgAttachment{display:block; color:#666}
a.msgAttachment:hover{color:#ff0000}
.msgSendTime{color:#999; text-align:right;}
a.deleteBtn{display:block; width:18px; height:18px; line-height:18px; text-align:center; float:right; border:1px solid #6badf6; color:#6badf6; background:#fff}
a.deleteBtn:hover{border:1px solid #ff0000; color:#ff0000}
.msgContent{padding-right:18px}